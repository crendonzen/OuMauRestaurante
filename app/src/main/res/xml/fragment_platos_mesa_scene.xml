<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/fragment2"
               motion:framePosition="100"
               android:alpha="0.5" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/linearLayout"
            motion:dragDirection="dragDown" />
        <OnSwipe
            motion:touchAnchorId="@+id/imageView14"
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="bottom" />
        <OnSwipe
            motion:touchAnchorId="@+id/imageView14"
            motion:dragDirection="dragDown" />

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment4"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="589dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="777dp"
            android:id="@+id/imageView14"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            motion:layout_editor_absoluteY="31dp"
            motion:layout_editor_absoluteX="582dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="777dp"
            android:layout_height="589dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            android:id="@+id/imageView14"
            android:layout_marginTop="0dp"
            motion:layout_editor_absoluteY="31dp"
            motion:layout_editor_absoluteX="582dp" />
        <Constraint
            android:layout_width="771dp"
            android:layout_height="71dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView14"
            android:id="@+id/linearLayout4"
            motion:layout_constraintStart_toStartOf="@+id/imageView14"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_editor_absoluteX="464dp"
            motion:layout_editor_absoluteY="590dp" />
        <Constraint
            android:layout_height="81dp"
            android:layout_width="73dp"
            motion:layout_constraintStart_toEndOf="@+id/scrollView5"
            android:id="@+id/imageButton"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="124dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="73dp"
            android:layout_height="81dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            android:id="@+id/imageButton"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="32dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/fragment2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="781dp"
            android:layout_height="361dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/imageView14"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="768dp"
            android:layout_height="379dp"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            motion:layout_editor_absoluteY="282dp"
            motion:layout_editor_absoluteX="512dp" />
        <Constraint
            android:id="@+id/imageView14"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="768dp"
            android:layout_height="379dp"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            motion:layout_editor_absoluteY="282dp"
            motion:layout_editor_absoluteX="512dp" />
        <Constraint
            android:id="@+id/scrollView5"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="733dp"
            android:layout_height="215dp"
            motion:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            android:layout_marginEnd="28dp"
            android:alpha="1"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="28dp"
            motion:layout_editor_absoluteX="504dp"
            motion:layout_editor_absoluteY="325dp" />
        <Constraint
            android:layout_height="71dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="766dp"
            android:id="@+id/linearLayout4"
            android:layout_marginEnd="0dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView14"
            motion:layout_editor_absoluteX="514dp"
            motion:layout_editor_absoluteY="578dp" />
        <Constraint
            android:id="@+id/fragment10"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="768dp"
            android:layout_height="270dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/uno" >
        <Constraint
            android:id="@+id/imageButton"
            android:layout_width="73dp"
            android:layout_height="81dp"
            motion:layout_editor_absoluteY="135dp"
            android:alpha="1"
            motion:layout_constraintStart_toEndOf="@+id/scrollView5"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/scrollView5"
            android:layout_width="520dp"
            android:layout_height="504dp"
            motion:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            motion:layout_constraintStart_toStartOf="@+id/imageView14"
            android:alpha="1" />
        <Constraint
            android:id="@+id/linearLayout9"
            android:layout_width="271dp"
            android:layout_height="582dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"

            motion:layout_constraintStart_toEndOf="@+id/scrollView5"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_editor_absoluteY="76dp"
            motion:layout_editor_absoluteX="1026dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/uno" >

        <OnSwipe
            motion:touchAnchorId="@+id/imageButton"
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="bottom" />
        <OnSwipe
            motion:touchAnchorId="@+id/imageButton"
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="bottom" />
        <OnSwipe
            motion:touchAnchorId="@+id/imageButton"
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="bottom" />
    </Transition>
</MotionScene>