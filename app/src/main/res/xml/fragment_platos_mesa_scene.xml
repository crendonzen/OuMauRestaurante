<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/fragment2"
               motion:framePosition="100"
               android:alpha="0.5" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/linearLayout"
            motion:dragDirection="dragDown" />
        <OnSwipe
            motion:touchAnchorId="@+id/imageView14"
            motion:dragDirection="dragDown" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment4"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="589dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="777dp"
            android:id="@+id/imageView14"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            motion:layout_editor_absoluteY="31dp"
            motion:layout_editor_absoluteX="582dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="777dp"
            android:layout_height="589dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            android:id="@+id/imageView14"
            android:layout_marginTop="0dp"
            motion:layout_editor_absoluteY="31dp"
            motion:layout_editor_absoluteX="582dp" />
        <Constraint
            android:layout_width="686dp"
            android:layout_height="72dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView14"
            android:id="@+id/linearLayout4"
            motion:layout_constraintStart_toStartOf="@+id/imageView14"
            motion:layout_editor_absoluteX="584dp"
            motion:layout_editor_absoluteY="589dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/fragment2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="781dp"
            android:layout_height="361dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/imageView14"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="781dp"
            android:layout_height="391dp"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            motion:layout_editor_absoluteY="573dp" />
        <Constraint
            android:id="@+id/imageView14"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="781dp"
            android:layout_height="391dp"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            motion:layout_editor_absoluteY="573dp" />
        <Constraint
            android:id="@+id/scrollView5"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="733dp"
            android:layout_height="215dp"
            motion:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            android:layout_marginEnd="28dp"
            android:alpha="1"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="28dp"
            motion:layout_editor_absoluteX="504dp"
            motion:layout_editor_absoluteY="325dp" />
        <Constraint
            android:layout_height="81dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="676dp"
            android:id="@+id/linearLayout4"
            android:layout_marginEnd="75dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView14"
            motion:layout_editor_absoluteX="606dp"
            motion:layout_editor_absoluteY="580dp" />
        <Constraint
            android:id="@+id/fragment10"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="768dp"
            android:layout_height="270dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1" />
        <Constraint
            android:layout_height="389dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView14"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="81dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            android:id="@+id/linearLayout8"
            motion:layout_editor_absoluteY="365dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/uno" >
        <Constraint
            android:id="@+id/linearLayout8"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="777dp"
            android:layout_height="564dp"
            motion:layout_constraintTop_toBottomOf="@+id/fragment10"
            android:alpha="1"
            motion:layout_editor_absoluteX="580dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/uno" >
        <OnSwipe
            motion:touchAnchorId="@+id/linearLayout8"
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="bottom" />
    </Transition>
</MotionScene>