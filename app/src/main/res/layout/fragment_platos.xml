<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfaz.PlatosFragment">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/fondoa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/botonAgregarPlato"
                android:layout_width="338dp"
                android:layout_height="450dp"
                android:layout_marginStart="208dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerCrop"
                android:src="@mipmap/agreplato"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.425" />

            <SearchView
                android:id="@+id/buscar_plato"
                android:layout_width="477dp"
                android:layout_height="44dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="32dp"
                android:background="#A3686767"
                app:layout_constraintStart_toEndOf="@+id/botonAgregarPlato"
                app:layout_constraintTop_toTopOf="parent">

            </SearchView>

            <ScrollView
                android:layout_width="581dp"
                android:layout_height="581dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toEndOf="@+id/botonAgregarPlato"
                app:layout_constraintTop_toBottomOf="@+id/buscar_plato">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="907dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listaPlatosCarta"
                            android:layout_width="558dp"
                            android:layout_height="519dp"
                            android:layout_marginStart="23dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>